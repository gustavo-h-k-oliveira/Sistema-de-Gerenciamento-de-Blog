@model ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Member since:</label>
        <p>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <div class="form-group">
        <label>Roles:</label>
        <ul>
            @foreach (var role in Model.Roles)
            {
                <li>@role</li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<p class="mt-3">
    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-outline-secondary">Update password</a>
    <a asp-action="Logout" class="btn btn-danger ml-2">Logout</a>
</p>
